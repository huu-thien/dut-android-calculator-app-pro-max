<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CALCULATOR APP"
            android:textStyle="bold"
            android:textSize="25dp"
            android:layout_marginVertical="20dp"
            android:gravity="center">
        </TextView>

    </LinearLayout>
    <FrameLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginVertical="50dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#28a745"
            android:orientation="vertical">

            <TextView
                android:id="@+id/expression"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="end"
                android:textSize="50dp"
                android:paddingRight="20dp"
                >
            </TextView>

            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:dividerInsetEnd="30dp"
                app:dividerInsetStart="30dp"
                app:dividerThickness="2dp">
            </com.google.android.material.divider.MaterialDivider>

            <TextView
                android:id="@+id/expressionHistory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="15dp"
                android:gravity="end"
                android:textSize="25dp"
                ></TextView>
        </LinearLayout>
    </FrameLayout>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:useDefaultMargins="true"
        android:columnCount="5">

        <Button
            android:id="@+id/btn1"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_column="0"
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="1">
        </Button>
        <Button
            android:id="@+id/btn2"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_column="1"
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="2">
        </Button>
        <Button
            android:id="@+id/btn3"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_column="2"
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="3">
        </Button>
        <Button
            android:id="@+id/btn_parentheses_left"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_column="3"
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="(">
        </Button>
        <Button
            android:id="@+id/btn_parentheses_right"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_column="4"
            android:textSize="20dp"
            android:textStyle="bold"
            android:text=")">
        </Button>
        <Button
            android:id="@+id/btn4"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_column="0"
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="4">
        </Button>
        <Button
            android:id="@+id/btn5"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_column="1"
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="5">
        </Button>
        <Button
            android:id="@+id/btn6"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_column="2"
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="6">
        </Button>
        <Button
            android:id="@+id/btn_multiply"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_column="3"
            android:textSize="20dp"
            android:textStyle="bold"
            android:backgroundTint="#8d8d89"
            android:text="*">
        </Button>
        <Button
            android:id="@+id/btn_divide"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_column="4"
            android:textSize="20dp"
            android:backgroundTint="#8d8d89"
            android:textStyle="bold"
            android:text="/">
        </Button>
        <Button
            android:id="@+id/btn7"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_column="0"
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="7">
        </Button>
        <Button
            android:id="@+id/btn8"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_column="1"
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="8">
        </Button>
        <Button
            android:id="@+id/btn9"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_column="2"
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="9">
        </Button>
        <Button
            android:id="@+id/btn_plus"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_column="3"
            android:textSize="20dp"
            android:textStyle="bold"
            android:backgroundTint="#8d8d89"
            android:text="+">
        </Button>
        <Button
            android:id="@+id/btn_minus"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_column="4"
            android:textSize="20dp"
            android:textStyle="bold"
            android:backgroundTint="#8d8d89"
            android:text="-">
        </Button>
        <Button
            android:id="@+id/btn_clear"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_column="0"
            android:textSize="20dp"
            android:textStyle="bold"
            android:backgroundTint="#f7085a"
            android:text="C">
        </Button>
        <Button

            android:id="@+id/btn0"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_column="1"
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="0">
        </Button>
        <Button
            android:id="@+id/btn_dot"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_column="2"
            android:textSize="20dp"
            android:textStyle="bold"
            android:text=".">
        </Button>
        <Button
            android:id="@+id/btn_delete"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_column="3"
            android:textSize="20dp"
            android:textStyle="bold"
            android:backgroundTint="#f7085a"
            android:text="âŒ«">
        </Button>
        <Button
            android:id="@+id/btn_equal"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_column="4"
            android:textSize="20dp"
            android:textStyle="bold"
            android:backgroundTint="#28a745"
            android:text="=">
        </Button>


    </GridLayout>

</LinearLayout>